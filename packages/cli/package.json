{
  "name": "@khizab/cli",
  "description": "Manage and generate code from Aptos ABIs",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khizab/khizab.git",
    "directory": "packages/cli"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run build:esm+types",
    "build:esm+types": "tsc --project tsconfig.build.json --outDir ./dist/esm --declaration --declarationMap --declarationDir ./dist/types",
    "clean": "rm -rf dist tsconfig.tsbuildinfo config plugins",
    "dev": "bun src/cli.ts",
    "test:build": "publint --strict",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/**",
    "!dist/**/*.tsbuildinfo",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.test-d.ts",
    "/config",
    "/plugins"
  ],
  "bin": {
    "khizab": "./dist/esm/cli.js"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/esm/exports/index.js",
  "types": "./dist/types/exports/index.d.ts",
  "typings": "./dist/types/exports/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/exports/index.d.ts",
      "default": "./dist/esm/exports/index.js"
    },
    "./config": {
      "types": "./dist/types/exports/config.d.ts",
      "default": "./dist/esm/exports/config.js"
    },
    "./plugins": {
      "types": "./dist/types/exports/plugins.d.ts",
      "default": "./dist/esm/exports/plugins.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "config": ["./dist/types/exports/config.d.ts"],
      "plugins": ["./dist/types/exports/plugins.d.ts"]
    }
  },
  "peerDependencies": {
    "typescript": ">=5.0.4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "bundle-require": "^4.0.2",
    "cac": "^6.7.14",
    "change-case": "^4.1.2",
    "chokidar": "^3.5.3",
    "dedent": "^0.7.0",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "esbuild": "^0.19.0",
    "execa": "^8.0.1",
    "find-up": "^6.3.0",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.2",
    "ora": "^6.3.1",
    "pathe": "^1.1.1",
    "picocolors": "^1.0.0",
    "prettier": "^3.0.3",
    "@aptos-labs/ts-sdk": "1.*",
    "@khizab/core": "workspace:*",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^11.0.2",
    "fixturez": "^1.1.0",
    "msw": "^2.0.6"
  },
  "contributors": ["Erfan Khadivar <hi@erfan.ee>"],
  "funding": "https://github.com/sponsors/khizab",
  "keywords": ["khizab", "apt", "aptos", "dapps", "wallet", "web3", "cli"]
}
